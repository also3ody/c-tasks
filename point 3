#include <iostream>

using namespace std;

bool is_even (int x)
{
    if(x%2==0)
        return true;
    else
        return false;
}

int main ()
{
   int num;
   bool check;
   cout<<"enter the number : ";
   cin>>num;
   check = is_even(num);
   if (check==1)
   {
      cout<<"the number is : even";
   }
   else
   {
        cout<<"the number is : odd";
   }

}
